<div class="container">

<div class="bs">
  <div class="col-md-6">

    <div class="signup-container">
      <%= form_for @user do |f|%>
      <div class="form-group">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.number_field :height, placeholder: 'height', class: 'form-control' %>
      </div>
        <div class="form-group">
        <%= f.number_field :weight, placeholder: 'weight', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary mb-2"  %>
      </div>

      <% end %>
    </div>
    </div>
  </div>

</div>
